{% extends "BricksSiteBundle::layout.html.twig" %}

{# SEO blocks #}
{% block meta_title_content %}Register | SymfonyBricks.com{% endblock %}
{% block meta_description_content %}Register at SymfonyBricks.com and share your knowledge.{% endblock %}

{% block main %}

    <div class="row">
        <div class="span9 offset3">
            <h1>{{ 'registration.title'|trans({}, 'FOSUserBundle') }}</h1>
       </div>
    </div>
    
    <br><br>
    
    <div class="row">
       <div class="span6 offset3">        
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register security-form">
                {{ form_widget(form) }}
                <div>
                    <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    
{% endblock %}